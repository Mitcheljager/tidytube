{
  "name": "simpletube",
  "description": "An extension built to simplify Youtube by removing excess clutter",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
        "matches": ["https://*/*"],
        "js": ["src/content/index.js"]
    }
  ],
  "background": {
    "service_worker": "src/background/index.js"
  }
}