{
  "name": "simpletube",
  "version": "0.0.1",
  "description": "An extension built to simplify Youtube by removing excess clutter",
  "permissions": [
    "declarativeContent", 
    "scripting",
    "storage", 
    "activeTab"
  ],
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*"],
      "js": ["simpletube-cs.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}